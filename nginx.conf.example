# Example Nginx configuration for Reyestr Download Server
# 
# Installation:
# 1. Copy this file to /etc/nginx/sites-available/reyestr-download-server
# 2. Edit the configuration (replace your-gate-server.com with your domain)
# 3. Create symlink: ln -s /etc/nginx/sites-available/reyestr-download-server /etc/nginx/sites-enabled/
# 4. Test: nginx -t
# 5. Reload: systemctl reload nginx
#
# SSL Certificate Setup (Let's Encrypt example):
# certbot --nginx -d your-gate-server.com

upstream download_server {
    server 127.0.0.1:8000;
}

server {
    listen 80;
    server_name your-gate-server.com;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name your-gate-server.com;
    
    # SSL certificates (Let's Encrypt)
    ssl_certificate /etc/letsencrypt/live/your-gate-server.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/your-gate-server.com/privkey.pem;
    
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;
    
    client_max_body_size 50M;
    
    location /api/ {
        proxy_pass http://download_server;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    location /health {
        proxy_pass http://download_server;
        proxy_set_header Host $host;
    }
    
    location / {
        proxy_pass http://download_server;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
