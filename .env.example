# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=reyestr_db
DB_USER=reyestr_user
DB_PASSWORD=reyestr_password
DB_POOL_MINCONN=10
DB_POOL_MAXCONN=250

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_ENABLED=true
CACHE_TTL_TASKS=10
CACHE_TTL_STATISTICS=30
CACHE_TTL_DOCUMENTS=60

# Security
ENABLE_AUTH=true

# Task Management
TASK_TIMEOUT_SECONDS=3600
HEARTBEAT_INTERVAL_SECONDS=60
MAX_TASKS_PER_CLIENT=5

# Telegram (optional)
TELEGRAM_BOT_TOKEN=

# Nginx Ports
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
